.tick-box{

    cursor: pointer;
    width 3em;
    
    .tick-box__inner{

        padding-top 100%;
        position relative;
        width 100%;
        
        .tick-box-svg{
            
            width 100%;
            height 100%;
            position absolute;
            top: 0;
            left 0; 
            

            
            polyline{
                
                stroke white;
            }
        }
        
    }
    
    
    
    &.tick-box_off{
        circle{
            
            fill #e5e5e5 !important;
        }
        
        polyline{
            
            stroke #c0c0c0 !important;
        }
    }
}